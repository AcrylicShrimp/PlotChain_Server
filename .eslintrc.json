{
    "env": {
        "browser" : true,
        "commonjs": true,
        "es6"     : true,
        "node"    : true
    },
    "extends"      : "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType" : "module"
    },
    "rules": {
        "no-console"              : "warn",
        "no-unused-vars"          : "warn",
        "no-mixed-spaces-and-tabs": "warn",
        "indent"                  : [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}